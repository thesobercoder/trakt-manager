{
  "name": "trakt-manager",
  "description": "Control your Trakt account directly from Raycast",
  "author": "thesobercoder",
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "categories": [
    "Media",
    "Other"
  ],
  "commands": [
    {
      "name": "movies",
      "title": "Search Movies",
      "subtitle": "Trakt Manager",
      "description": "Search for movies by title",
      "mode": "view"
    },
    {
      "name": "shows",
      "title": "Search Shows",
      "subtitle": "Trakt Manager",
      "description": "Search for shows by title",
      "mode": "view"
    },
    {
      "name": "episodes",
      "title": "Search Episodes",
      "subtitle": "Trakt Manager",
      "description": "Search for episodes by title",
      "mode": "view"
    },
    {
      "name": "watchlist",
      "title": "Watchlist",
      "subtitle": "Trakt Manager",
      "description": "Lists movies and shows that are in your watchlist",
      "mode": "view"
    },
    {
      "name": "up-next",
      "title": "Up Next",
      "subtitle": "Trakt Manager",
      "description": "Get the list of shows that are up next",
      "mode": "view"
    },
    {
      "name": "history",
      "title": "History",
      "subtitle": "Trakt Manager",
      "description": "Lists movies and shows that are in your history",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.18.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "syncpack": "^13.0.0",
    "typescript": "^5.7.2"
  },
  "icon": "trakt.png",
  "license": "MIT",
  "preferences": [
    {
      "name": "clientId",
      "title": "Trakt Client ID",
      "description": "Your Trakt API Client ID",
      "type": "password",
      "required": true
    },
    {
      "name": "token",
      "title": "Trakt Token",
      "description": "Your Trakt API Access Token",
      "type": "password",
      "required": true
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "fmt": "prettier '**/*' -wu && syncpack-format",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "title": "Trakt Manager"
}
